<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <nav>
      <% include ../partials/nav.ejs %>
    </nav>
    <h1><%=user.username%>'s Profile (need to be logged in first)</h1>

    <a href="/videos/<%=user._id%>/new">Add New Video</a>
    <br>

    <% for(let i = 0; i < videos.length; i++) { %>
      <h3>Title: <a href="videos/<%=videos[i]._id%>"><%=videos[i].title%></a></h3> <br>

      <iframe width="560" height="315" src="<%= videos[i].link %>" frameborder="0" allowfullscreen></iframe>

      <h3>Length: <%=videos[i].length%></h3>
      <% if(videos[i].equipment === true){ %>
          <h3>Equipment needed.</h3>
      <% } else { %>
          <h3>No equipment needed.</h3>
      <% } %>

        <a href="/videos/<%=videos[i]._id%>/edit">Edit Video</a>
    <% } %>
    <footer>
      <a href="/users/<%=user._id%>/edit">Edit User Info</a>

      <form action="/users/<%=user._id%>?_method=DELETE" method="post">
        <input type="submit" value="Delete Account">
      </form>
    </footer>


  </body>
</html>
